<%-include("./configure/head")%>
<body>
    <table>
        <tr>
            <th>NAME</th>
            <th>EMAIL ID</th>
            <th>PASSWORD</th>
            <th>PHONE NO</th>
            <th>PHOTO</th>
            <th>ACTION</th>
            <th>DELETE</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.emailId %></td>
                <td><%= user.passWord %></td>
                <td><%= user.phoneNo %></td>
                <td>
                    <% if (user.file) { %>
                        <img src="<%= user.file %>" width="100" height="100" alt="Uploaded File" />
                    <% } else { %>
                        No File
                    <% } %>
                </td>
                <td class="edtbutton">
                    <button type="button" onclick="window.location.href='/editform/<%= user._id %>'">
                        Edit
                    </button>
                </td>
                <td>
                    <button type="button" class="delete-button" data-id="<%= user._id %>">
                        Delete
                    </button>
                </td>
            </tr>
        <% }); %> 
    </table>

    <!-- Include Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
    const deleteButtons = document.querySelectorAll(".delete-button");

    deleteButtons.forEach(button => {
        button.addEventListener("click", async function () {
            const userId = this.getAttribute("data-id"); // Get user ID
            const row = this.closest("tr"); // Get the table row

            if (confirm("Are you sure you want to delete this user?")) {
                try {
                    const response = await axios.post(`/delete/${userId}`);
                    console.log("Response received:", response.data);

                    if (response.data.status === true) {
                        alert(response.data.message);
                        row.remove(); 
                        setTimeout(() => location.reload(), 1000);// âœ… Remove the row from the table dynamically
                    } else {
                        alert("Error: " + response.data.message);
                    }
                } catch (error) {
                    console.error("Axios Error:", error);
                    alert("Error deleting user. Please try again.");
                }
            }
        });
    });
});

    </script>
</body>
</html>
